<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Document</title>
</head>
<body>
    <div class="w-75 m-auto">
        <h2 class="text-center my-3">EJS with node.js</h2>
        <form action="/addUser" method="post">  
            <input type="text" name="name" class="form-control mb-4" placeholder="enter your name..">
            <input type="email" name="email" class="form-control mb-4" placeholder="enter your email..">
            <input type="password" name="password" class="form-control mb-4" placeholder="enter your password..">
            <button class="btn btn-info">ADD USER</button>
        </form>

        <table class="table text-center my-5">
            <thead>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Action</th>
            </thead>
            <tbody>
                <% for( let i = 0; i < users.length; i++ ) { %>
                    <tr>
                    <td><%= i+1 %></td>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].password %></td>
                    <td>
                        <a href="/delete/<%= users[i]._id %>" class="btn btn-danger">DELETE</a>
                        <a href="/update/<%= users[i]._id %>" class="btn btn-success ">UPDATE</a>
                    </td>
                </tr>
                <% } %>
                
            </tbody>
        </table>
    </div>
</body>
</html>